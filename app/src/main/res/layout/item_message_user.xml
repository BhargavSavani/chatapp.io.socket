<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="end"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/user_message_background"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/messageTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:layout_marginRight="10dp" /> <!-- margin to make space for the tick mark -->

        <ImageView
            android:id="@+id/ivTick"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="bottom"
            android:contentDescription="Message Status"
            android:src="@drawable/baseline_done"
            android:visibility="gone"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="2dp" /> <!-- adjust the position as needed -->

    </LinearLayout>
</RelativeLayout>
